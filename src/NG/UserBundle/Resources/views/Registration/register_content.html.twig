{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" id="signup" class="form-signin">
    {{ form_widget(form.username, { attr: { placeholder: form.username.vars.label, class: 'form-control' } }) }}
    {{ form_widget(form.email, { attr: { placeholder: form.email.vars.label, class: 'form-control' } }) }}
    {{ form_widget(form.plainPassword, { attr: { placeholder: form.plainPassword.vars.label, class: 'form-control' } }) }}
    {{ form_rest(form) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-lg btn-success btn-block" />
    </div>
</form>
