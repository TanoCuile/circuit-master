{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="{{ form.username.vars.id }}" class="control-label col-lg-4">{{ form.username.vars.label }}</label>
        <div class="col-lg-8">
            {{ form_widget(form.username, { attr: {class: 'form-control', } } ) }}
        </div>
    </div>
    <div class="form-group">
        <label for="{{ form.email.vars.id }}" class="control-label col-lg-4">{{ form.email.vars.label }}</label>
        <div class="col-lg-8">
            {{ form_widget(form.email, { attr: {class: 'form-control', } } ) }}
        </div>
    </div>
    <div class="form-group">
        <label for="{{ form.current_password.vars.id }}" class="control-label col-lg-4">{{ form.current_password.vars.label }}</label>
        <div class="col-lg-8">
            {{ form_widget(form.current_password, { attr: {class: 'form-control', } } ) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Редагувати" />
    </div>
</form>
