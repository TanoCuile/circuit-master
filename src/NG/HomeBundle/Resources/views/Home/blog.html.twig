{% extends '::layout.html.twig' %}
{% block title %}{{ blog.title }}{% endblock %}
{% block page_title %}{{ blog.title }}{% endblock %}
{% block content %}
    <div class="body">
        <div class="info">
            <span class="author">Опубліковано: {{ blog.author.fullName }}</span>
            <span class="date">Дата: {{ blog.created|date('Y.m.d') }}</span>
        </div>
        <div class="text">{{ blog.text|raw }}</div>
        <div class="clearfix"></div>
    </div>
{% endblock %}